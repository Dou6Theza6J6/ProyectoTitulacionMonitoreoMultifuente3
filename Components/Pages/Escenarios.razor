@page "/Escenarios"
@attribute [Authorize]
@using Microsoft.EntityFrameworkCore
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Authorization
@using MonitoreoMultifuente3.Models
@using MonitoreoMultifuente3.Data
@inject ApplicationDbContext DbContext
@inject IJSRuntime JSRuntime
@inject HttpClient Http
@implements IAsyncDisposable

<PageTitle>Gestión de Escenarios</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>📍 Gestión de Escenarios y Ubicaciones</h3>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Registrar Nuevo</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@nuevoEscenario" OnValidSubmit="GuardarMuestra">
                        <DataAnnotationsValidator />

                        <div class="mb-2">
                            <label class="form-label small fw-bold">Nombre del Escenario</label>
                            <InputText class="form-control" @bind-Value="nuevoEscenario.nombre" placeholder="Ej: Pozo 3" />
                        </div>

                        <div class="mb-2">
                            <label class="form-label small fw-bold">Descripción / Detalles</label>
                            <InputText class="form-control" @bind-Value="nuevoEscenario.descripcion" placeholder="Ej: Pozo principal del sector norte" />
                        </div>

                        <div class="mb-2">
                            <label class="form-label small fw-bold">Nombre Ubicación (Referencia)</label>
                            <InputText class="form-control" @bind-Value="nuevaUbicacion.nombre" placeholder="Ej: Rancho San Pedro" />
                        </div>

                        <div class="row">
                            <div class="col-6 mb-2">
                                <label class="form-label small">Ciudad</label>
                                <InputText class="form-control form-control-sm" @bind-Value="nuevoEscenario.ciudad" />
                            </div>
                            <div class="col-6 mb-2">
                                <label class="form-label small">País</label>
                                <InputText class="form-control form-control-sm" @bind-Value="nuevoEscenario.pais" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 mb-2">
                                <label class="form-label small">Calle / Zona</label>
                                <InputText class="form-control form-control-sm" @bind-Value="nuevoEscenario.calles" />
                            </div>
                            <div class="col-4 mb-2">
                                <label class="form-label small">C.P.</label>
                                <InputText class="form-control form-control-sm" @bind-Value="nuevoEscenario.codigo_p" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Coordenadas (Clic en mapa)</label>
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">Lat</span>
                                <InputNumber class="form-control" @bind-Value="nuevaUbicacion.latitud" ReadOnly="true" />
                                <span class="input-group-text">Lon</span>
                                <InputNumber class="form-control" @bind-Value="nuevaUbicacion.longitud" ReadOnly="true" />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100">💾 Guardar Escenario</button>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-0">
                    <div id="map" style="height: 100%; min-height: 500px; width: 100%; border-radius: 0 4px 4px 0;"></div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">📚 Historial de Escenarios Registrados</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Escenario</th>
                        <th>Descripción</th>
                        <th>Ubicación / Dirección</th>
                        <th>Fecha Alta</th>
                        <th>Coordenadas</th>
                        <AuthorizeView Roles="Administrador">
                            <th class="text-center">Acciones</th>
                        </AuthorizeView>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in escenarios)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@(item.nombre ?? "Sin Nombre")</td>

                            <td>@item.descripcion</td>

                            <td>
                                <strong>@item.Ubicacion?.nombre</strong><br />
                                <small class="text-muted">@item.ciudad, @item.pais (@item.codigo_p)</small>
                            </td>
                            <td>@item.created_at.ToLocalTime().ToString("g")</td>
                            <td>
                                <small>@item.Ubicacion?.latitud.ToString("F4") / @item.Ubicacion?.longitud.ToString("F4")</small>
                            </td>

                            <AuthorizeView Roles="Administrador">
                                <Authorized>
                                    <td class="text-center">
                                        <button class="btn btn-danger btn-sm" @onclick="() => EliminarEscenario(item)">
                                            🗑 Eliminar
                                        </button>
                                    </td>
                                </Authorized>
                            </AuthorizeView>
                        </tr>
                    }
                    @if (!escenarios.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">No hay escenarios registrados.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<Escenario> escenarios = new();
    private Escenario nuevoEscenario = new();
    private Ubicacion nuevaUbicacion = new();
    private DotNetObjectReference<Escenarios>? dotNetHelper;

    protected override async Task OnInitializedAsync()
    {
        await CargarEscenarios();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            dotNetHelper = DotNetObjectReference.Create(this);
            await JSRuntime.InvokeVoidAsync("initMap", dotNetHelper);
        }
    }

    private async Task CargarEscenarios()
    {
        // Excluir el escenario 'All' si existe por error en la BD para que no salga en la tabla
        escenarios = await DbContext.Escenarios
            .Include(e => e.Ubicacion)
            .Where(e => e.nombre != "All")
            .OrderByDescending(x => x.created_at)
            .ToListAsync();
    }

    [JSInvokable]
    public async Task SetMapCoordinates(double lat, double lng)
    {
        nuevaUbicacion.latitud = Math.Round(lat, 6);
        nuevaUbicacion.longitud = Math.Round(lng, 6);

        try
        {
            Http.DefaultRequestHeaders.UserAgent.ParseAdd("MonitoreoApp/1.0");
            var url = $"https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat={lat}&lon={lng}";
            var result = await Http.GetFromJsonAsync<NominatimResponse>(url);

            if (result?.address != null)
            {
                nuevoEscenario.pais = result.address.country;
                nuevoEscenario.ciudad = result.address.city ?? result.address.town ?? result.address.village;
                nuevoEscenario.calles = result.address.road ?? result.address.suburb;
                nuevoEscenario.codigo_p = result.address.postcode;
            }
        }
        catch (Exception ex) { Console.WriteLine(ex.Message); }

        await InvokeAsync(StateHasChanged);
    }

    private async Task GuardarMuestra()
    {
        var fechaActual = DateTime.UtcNow;

        // 1. Guardar Ubicación
        nuevaUbicacion.created_at = fechaActual;
        nuevaUbicacion.updated_at = fechaActual;
        DbContext.Ubicaciones.Add(nuevaUbicacion);
        await DbContext.SaveChangesAsync();

        // 2. Guardar Escenario
        nuevoEscenario.ubicacion_id = nuevaUbicacion.ubicacion_id;
        nuevoEscenario.created_at = fechaActual;
        nuevoEscenario.updated_at = fechaActual;

        DbContext.Escenarios.Add(nuevoEscenario);
        await DbContext.SaveChangesAsync();

        await CargarEscenarios();
        nuevoEscenario = new();
        nuevaUbicacion = new(); // Limpiar formulario
        StateHasChanged();
    }

    private async Task EliminarEscenario(Escenario escenario)
    {
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", $"¿Estás seguro de eliminar el escenario '{escenario.nombre}'?");
        if (confirmado)
        {
            try
            {
                DbContext.Escenarios.Remove(escenario);
                if (escenario.Ubicacion != null)
                {
                    DbContext.Ubicaciones.Remove(escenario.Ubicacion);
                }
                await DbContext.SaveChangesAsync();
                await CargarEscenarios();
            }
            catch (Exception)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Error al eliminar. Es posible que tenga mediciones asociadas.");
            }
        }
    }

    public class NominatimResponse { public NominatimAddress? address { get; set; } }
    public class NominatimAddress
    {
        public string? road { get; set; }
        public string? suburb { get; set; }
        public string? city { get; set; }
        public string? town { get; set; }
        public string? village { get; set; }
        public string? country { get; set; }
        public string? postcode { get; set; }
    }

    public async ValueTask DisposeAsync()
    {
        if (dotNetHelper != null) dotNetHelper.Dispose();
        await Task.CompletedTask;
    }
}