@page "/configuracion"
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using MonitoreoMultifuente3.Data
@* SEGURIDAD: Solo Administradores pueden entrar aquí *@
@attribute [Authorize(Roles = "Administrador")]
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole<int>> RoleManager
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Configuración</PageTitle>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="mb-3">⚙ Configuración del Sistema</h3>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm hover-card" style="cursor:pointer;" @onclick='() => Navigation.NavigateTo("configuracion-sensores")'>
                <div class="card-body d-flex align-items-center">
                    <img src="images/icons/Sensores.png" style="width:40px; height:40px; margin-right:15px;" />
                    <div>
                        <h5 class="card-title mb-0">Sensores y Parámetros</h5>
                        <small class="text-muted">Gestionar dispositivos de medición.</small>
                    </div>
                    <div class="ms-auto">
                        <i class="bi bi-chevron-right text-muted"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card h-100 shadow-sm bg-light border-0">
                <div class="card-body d-flex align-items-center opacity-50">
                    <i class="bi bi-shield-lock-fill fs-2 me-3 text-muted"></i>
                    <div>
                        <h5 class="card-title mb-0">Seguridad Avanzada</h5>
                        <small class="text-muted">Próximamente...</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">👥 Gestión de Usuarios y Roles</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Usuario</th>
                            <th>Rol Actual</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in usuarios)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-2" style="width:35px; height:35px;">
                                            @usuario.UserName?.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <strong>@usuario.UserName</strong><br />
                                            <small class="text-muted">@usuario.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (rolesUsuario.ContainsKey(usuario.Id) && rolesUsuario[usuario.Id].Contains("Administrador"))
                                    {
                                        <span class="badge bg-success">Administrador</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Usuario</span>
                                    }
                                </td>
                                <td>
                                    @if (rolesUsuario.ContainsKey(usuario.Id) && rolesUsuario[usuario.Id].Contains("Administrador"))
                                    {
                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => QuitarAdmin(usuario)">
                                            Quitar Admin
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary btn-sm" @onclick="() => HacerAdmin(usuario)">
                                            Hacer Admin
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ApplicationUser> usuarios = new();
    private Dictionary<int, IList<string>> rolesUsuario = new();

    protected override async Task OnInitializedAsync()
    {
        // Aseguramos que el rol exista en BD
        if (!await RoleManager.RoleExistsAsync("Administrador"))
        {
            await RoleManager.CreateAsync(new IdentityRole<int>("Administrador"));
        }
        await CargarUsuarios();
    }

    private async Task CargarUsuarios()
    {
        usuarios = await UserManager.Users.ToListAsync();
        rolesUsuario.Clear();
        foreach (var u in usuarios)
        {
            var roles = await UserManager.GetRolesAsync(u);
            rolesUsuario.Add(u.Id, roles);
        }
    }

    private async Task HacerAdmin(ApplicationUser user)
    {
        await UserManager.AddToRoleAsync(user, "Administrador");
        await CargarUsuarios();
    }

    private async Task QuitarAdmin(ApplicationUser user)
    {
        // Evita quitarte el rol a ti mismo si eres el usuario actual (Opcional, por seguridad)
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (user.UserName == authState.User.Identity?.Name)
        {
            // Aquí podrías poner una alerta si quisieras evitar el auto-bloqueo
        }

        await UserManager.RemoveFromRoleAsync(user, "Administrador");
        await CargarUsuarios();
    }
}

<style>
    .hover-card:hover {
        background-color: #f8f9fa;
        transform: translateY(-2px);
        transition: all 0.2s;
    }
</style>