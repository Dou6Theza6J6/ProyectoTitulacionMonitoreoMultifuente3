@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <AuthorizeView Roles="Administrador">
                <Authorized>
                    <div id="admin-alert" class="alert alert-primary d-flex align-items-center justify-content-between" role="alert">
                        <div>
                            <i class="bi bi-shield-lock-fill me-2"></i>
                            <strong>Modo Administrador activo</strong>
                        </div>
                        <button type="button" class="btn-close" aria-label="Close"
                                onclick="document.getElementById('admin-alert').style.display='none';"></button>
                    </div>
                </Authorized>
            </AuthorizeView>

            @Body
        </article>
    </main>
</div>