@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <AuthorizeView Roles="Administrador">
                <Authorized>
                    @if (mostrarAvisoAdmin)
                    {
                        <div class="alert alert-warning d-flex align-items-center justify-content-between" role="alert" style="margin-bottom: 1rem;">
                            <div>
                                <i class="bi bi-shield-lock-fill me-2"></i>
                                <strong>Modo Administrador activo</strong>
                            </div>
                            @* Aquí está la corrección: llamamos a una función C# *@
                            <button type="button" class="btn-close" aria-label="Close" @onclick="CerrarAviso"></button>
                        </div>
                    }
                </Authorized>
            </AuthorizeView>

            @Body
        </article>
    </main>
</div>

@code {
    // Variable de control para ocultar/mostrar
    private bool mostrarAvisoAdmin = true;

    private void CerrarAviso()
    {
        mostrarAvisoAdmin = false;
        // Esto le dice a Blazor que repinte la pantalla sin el aviso
        StateHasChanged();
    }
}