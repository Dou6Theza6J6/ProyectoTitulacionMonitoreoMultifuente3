@using MonitoreoMultifuente3.Components.Account
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center">
            <span class="text-light me-3">Hola, @context.User.Identity?.Name!</span>
            <button class="btn btn-sm btn-outline-light" @onclick="BeginSignOut">Cerrar Sesión</button>
        </div>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-sm btn-primary" href="login">Iniciar Sesión</a>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Inject]
    private DesktopAuthenticationStateProvider AuthProvider { get; set; } = default!;

    private void BeginSignOut()
    {
        // CAMBIO: El método se llama 'Logout' en tu proveedor
        AuthProvider.Logout();

        // Redirigir al inicio y forzar recarga para limpiar el estado visual
        NavigationManager.NavigateTo("/", forceLoad: true);
    }
}